<!-- BEGIN WEDDING GIFTS SECTION -->
<section id="weddinggifts">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2 class="section-title">Presentes</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <ul class="wedding-gifts clearfix">
          <li id="gift-list" data-animation-direction="from-bottom" data-animation-delay="250">
            <i class="fa fa-at"></i><br>
            <h3>Confira nossa<br><strong>lista online</strong></h3>
            <div class="info">
              <br>
              <br>
              <br>
              <button type="button" class="btn btn-default2" data-toggle="modal" data-target="#giftModal2">
                Ver Presentes
              </button>
            </div>
          </li>
          <li id="help-wedding" data-animation-direction="from-bottom" data-animation-delay="450">
            <i class="fa fa-home"></i><br>
            <h3>Confira nossa<br><strong>lista presencial</strong><br>(Promissão/SP)</h3>
            <div class="info">
              <img src="images/pratika.png" alt="Prátika Presentes" />
            </div>
          </li>
          <li id="help-honeymoon" data-animation-direction="from-bottom" data-animation-delay="650">
            <i class="fa fa-plane"></i><br>
            <h3>Para tornar nossa lua<br>de mel ainda mais<br><strong>especial</strong></h3>
            <div class="info">
              <br>
              <button type="button" class="btn btn-default2" data-toggle="modal" data-target="#giftModal">
                Ver Cotas
              </button>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 center">
        <div class="form-wrap" id="guest_form">
          <section class="highlighted">
            <div v-if="notSent">
              <h3><i class="icon icon-arrow-right"></i>Deixe uma mensagem<i class="icon icon-arrow-left"></i></h3>
              <div class="col-sm-12">
                <textarea rows="4" class="form-control gift_msg" style="resize: none;"></textarea>
              </div>
            </div>
            <div v-else>
              <h3><i class="icon icon-arrow-right"></i>Obrigado<i class="icon icon-arrow-left"></i></h3>
            </div>
          </section>
        </div>
        <div v-if="notSent" class="center">
          <button v-on:click="sendMsg" type="submit" class="btn ribbon btn-color"><span class="line_above"></span><i class="icon icon-arrow-right"></i>ENVIAR<i class="icon icon-arrow-left"></i></button>
        </div>
      </div>
    </div>
</section>
<!-- END WEDDING GIFTS SECTION -->
